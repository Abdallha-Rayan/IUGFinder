{
  "openapi": "3.0.0",
  "info": {
    "title": "IUG_FINDER_API",
    "version": "1.0.0",
    "description": "IUG Finder API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "tags": [
    {
      "name": "IUG Finder",
      "description": "API"
    }
  ],
  "paths": {
    "/api/auth/login": {
      "post": {
        "tags": ["IUG Finder"],
        "summary": "User Login",
        "description": "Login for an existing user",
        "operationId": "loginUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "test@iugfinder.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password123#"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Login successful"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "username": {
                          "type": "string",
                          "example": "exampleuser"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "tags": ["IUG Finder Cretae reports"],
        "summary": "User Register",
        "description": "Register for new user",
        "operationId": "registerUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "first_name",
                  "last_name",
                  "email",
                  "university_id",
                  "phone",
                  "password",
                  "confirmPassword"
                ],
                "properties": {
                  "first_name": {
                    "type": "string",
                    "example": "Abdallah"
                  },
                  "last_name": {
                    "type": "string",
                    "example": "rayan"
                  },
                  "email": {
                    "type": "string",
                    "example": "test@iugfinder.com"
                  },
                  "university_id": {
                    "type": "number",
                    "example": "120220334"
                  },
                  "phone": {
                    "type": "number",
                    "example": "0593439349"
                  },
                  "password": {
                    "type": "string",
                    "example": "sjsdb09$$$"
                  },
                  "confirmPassword": {
                    "type": "string",
                    "example": "sjsdb09"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "register successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "register successful"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "first_name": {
                          "type": "string",
                          "example": "Abdallah"
                        },
                        "last_name": {
                          "type": "string",
                          "example": "rayan"
                        },
                        "email": {
                          "type": "string",
                          "example": "test@iugfinder.com"
                        },
                        "university_id": {
                          "type": "number",
                          "example": 120220334
                        },
                        "phone": {
                          "type": "number",
                          "example": "0593439349"
                        },
                        "password": {
                          "type": "string",
                          "example": "sjsdb09$$$"
                        },
                        "confirmPassword": {
                          "type": "string",
                          "example": "sjsdb09"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/api/reports": {
      "post": {
        "tags": ["IUG Finder Cretae reports"],
        "summary": "User Cretae reports",
        "description": "reports for new user",
        "operationId": "reports For User",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "status",
                  "item_type",
                  "color",
                  "report_date",
                  "report_time",
                  "location",
                  "description"
                ],
                "properties": {
                  "status": {
                    "type": "string",
                    "example": "موجود او مفقود"
                  },
                  "item_type": {
                    "type": "string",
                    "example": "جوال ايفون ١٦"
                  },
                  "color": {
                    "type": "string",
                    "example": "احمر"
                  },
                  "report_date": {
                    "type": "string",
                    "format": "date",
                    "example": "2025-04-17"
                  },
                  "report_time": {
                    "type": "string",
                    "format": "time",
                    "example": "11:30:00"
                  },
                  "location": {
                    "type": "string",
                    "example": "شارع B - الطابق الثاني"
                  },
                  "description": {
                    "type": "string",
                    "example": "قرب الكافتيريا"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Report created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Report created successfully"
                    },
                    "reportId": {
                      "type": "integer",
                      "example": 8
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      },
      "get": {
        "tags": ["IUG Finder Cretae reports"],
        "summary": "get Reports For User",
        "description": "Get all reports based on user role",
        "operationId": "getReports",
        "responses": {
          "200": {
            "description": "Reports fetched successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Reports fetched successfully"
                    },
                    "length": {
                      "type": "integer",
                      "example": 2
                    },
                    "reports": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "integer", "example": 1 },
                          "item_type": { "type": "string", "example": "مفتاح" },
                          "color": { "type": "string", "example": "أسود" },
                          "report_date": { "type": "string", "format": "date-time", "example": "2025-04-16T21:00:00.000Z" },
                          "report_time": { "type": "string", "format": "time", "example": "11:30:00" },
                          "location": { "type": "string", "example": "مبنى B - الطابق الثاني" },
                          "description": { "type": "string", "example": "المفتاح ضاع قرب الكافتيريا" },
                          "user_id": { "type": "integer", "example": 3 },
                          "created_at": { "type": "string", "format": "date-time", "example": "2025-04-17T12:12:52.000Z" },
                          "status": { "type": "string", "example": "مفقود" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Database error"
          }
        }
      }
    }
    ,"/api/reports/others": {
      "get": {
        "tags": ["IUG Finder Cretae reports"],
        "summary": "Get Reports With Other Status",
        "description": "Get all reports where status is not 'مفقود' or 'موجود'",
        "operationId": "getOtherReports",
        "responses": {
          "200": {
            "description": "Other status reports fetched successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Other reports fetched successfully"
                    },
                    "length": {
                      "type": "integer",
                      "example": 1
                    },
                    "reports": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "integer", "example": 5 },
                          "item_type": { "type": "string", "example": "حقيبة" },
                          "color": { "type": "string", "example": "أزرق" },
                          "report_date": { "type": "string", "format": "date-time" },
                          "report_time": { "type": "string", "format": "time" },
                          "location": { "type": "string" },
                          "description": { "type": "string" },
                          "user_id": { "type": "integer" },
                          "created_at": { "type": "string", "format": "date-time" },
                          "status": { "type": "string", "example": "تحت المراجعة" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Database error"
          }
        }
      }
    },"/api/reports/lost": {
      "get": {
        "tags": ["IUG Finder Cretae reports"],
        "summary": "Get Lost Reports",
        "description": "Get all reports where status is 'مفقود'",
        "operationId": "getLostReports",
        "responses": {
          "200": {
            "description": "Lost reports fetched successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Lost reports fetched successfully"
                    },
                    "length": {
                      "type": "integer",
                      "example": 2
                    },
                    "reports": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "integer", "example": 3 },
                          "item_type": { "type": "string", "example": "الة حاسبة" },
                          "color": { "type": "string", "example": "رمادي" },
                          "report_date": { "type": "string", "format": "date-time" },
                          "report_time": { "type": "string", "format": "time" },
                          "location": { "type": "string" },
                          "description": { "type": "string" },
                          "user_id": { "type": "integer" },
                          "created_at": { "type": "string", "format": "date-time" },
                          "status": { "type": "string", "example": "مفقود" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Database error"
          }
        }
      }
    },"/api/reports/existing": {
      "get": {
        "tags": ["IUG Finder Cretae reports"],
        "summary": "Get Existing Reports",
        "description": "Get all reports where status is 'موجود'",
        "operationId": "getExistingReports",
        "responses": {
          "200": {
            "description": "Existing reports fetched successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Existing reports fetched successfully"
                    },
                    "length": {
                      "type": "integer",
                      "example": 1
                    },
                    "reports": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "integer", "example": 4 },
                          "item_type": { "type": "string", "example": "الة حاسبة" },
                          "color": { "type": "string", "example": "رمادي" },
                          "report_date": { "type": "string", "format": "date-time" },
                          "report_time": { "type": "string", "format": "time" },
                          "location": { "type": "string" },
                          "description": { "type": "string" },
                          "user_id": { "type": "integer" },
                          "created_at": { "type": "string", "format": "date-time" },
                          "status": { "type": "string", "example": "موجود" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Database error"
          }
        }
      }
    },"/api/reports/{id}": {
      "delete": {
        "tags": ["IUG Finder Cretae reports"],
        "summary": "Delete a report",
        "description": "Allows an admin to delete any report, and a user to delete their own report only.",
        "operationId": "deleteReport",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the report to delete",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 3
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Report deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Report deleted successfully"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Access denied. You can only delete your own reports."
          },
          "404": {
            "description": "Report not found"
          },
          "500": {
            "description": "Database error"
          }
        }
      }
    }
    
    
    
    
  }
}
