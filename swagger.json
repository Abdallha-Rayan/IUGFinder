{
  "openapi": "3.0.0",
  "info": {
    "title": "IUG_FINDER_API",
    "version": "1.0.0",
    "description": "IUG Finder API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "tags": [
    {
      "name": "IUG Finder",
      "description": "API"
    }
  ],
  "paths": {
    "/api/auth/login": {
      "post": {
        "tags": ["IUG Finder"],
        "summary": "User Login",
        "description": "Login for an existing user",
        "operationId": "loginUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "test@iugfinder.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password123#"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Login successful"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "username": {
                          "type": "string",
                          "example": "exampleuser"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "tags": ["IUG Finder"],
        "summary": "User Register",
        "description": "Register for new user",
        "operationId": "registerUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "first_name",
                  "last_name",
                  "email",
                  "university_id",
                  "phone",
                  "password",
                  "confirmPassword"
                ],
                "properties": {
                  "first_name": {
                    "type": "string",
                    "example": "Abdallah"
                  },
                  "last_name": {
                    "type": "string",
                    "example": "rayan"
                  },
                  "email": {
                    "type": "string",
                    "example": "test@iugfinder.com"
                  },
                  "university_id": {
                    "type": "number",
                    "example": "120220334"
                  },
                  "phone": {
                    "type": "number",
                    "example": "0593439349"
                  },
                  "password": {
                    "type": "string",
                    "example": "sjsdb09$$$"
                  },
                  "confirmPassword": {
                    "type": "string",
                    "example": "sjsdb09"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "register successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "register successful"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "first_name": {
                          "type": "string",
                          "example": "Abdallah"
                        },
                        "last_name": {
                          "type": "string",
                          "example": "rayan"
                        },
                        "email": {
                          "type": "string",
                          "example": "test@iugfinder.com"
                        },
                        "university_id": {
                          "type": "number",
                          "example": 120220334
                        },
                        "phone": {
                          "type": "number",
                          "example": "0593439349"
                        },
                        "password": {
                          "type": "string",
                          "example": "sjsdb09$$$"
                        },
                        "confirmPassword": {
                          "type": "string",
                          "example": "sjsdb09"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    }
  }
}
